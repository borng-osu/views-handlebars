<h1>Enter your workout routine!</h1>

<form action="/insert" id="insert">
    <legend>New Exercise</legend>
    <label for="name">Name:</label>
    <input type="text" name="name" id="name">
    <label for="reps">Reps:</label>
    <input type="number" name="reps" id="reps">
    <label for="weight">Weight:</label>
    <input type="number" name="weight" id="weight">
    <label for="name">Date:</label>
    <input type="date" name="date" id="date">
    <label for="name">In lbs?</label>
    <input type="checkbox" name="lbs" id="lbs">
    <input type="submit" name="add" id="add" value="Add">
</form>

<br />

<h2>Current Routine</h2>

<table id="content">
    <tr>
        <th>Name</th>
        <th>Reps</th>
        <th>Weight</th>
        <th>Date</th>
        <th>In lbs?</th>
        <th>Options</th>
    </tr>
    {{#each routine}}
    <tr id="{{this.id}}">
        <td>{{this.name}}</td>
        <td>{{this.reps}}</td>
        <td>{{this.weight}}</td>
        <td>{{this.date}}</td>
        <td>{{this.lbs}}</td>
        <td>
            <input type="button" value="Delete" onclick="deleteRow({{this.id}})">
            <a href="/edit?id={{this.id}}">Edit</a>
        </td>
    </tr>
    {{/each}}
</table>

<script src="/js/script.js"></script>